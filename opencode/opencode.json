{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-12686183-6981-43f9-9c17-d16cbbf9bb05"
      }
    },
    "mgrep": {
      "type": "local",
      "command": ["mgrep", "mcp"],
      "enabled": true
    }
  },
  "lsp": {
    "pyright": {
      "disabled": true
    },
    "ruff": {
      "command": ["ruff-lsp"],
      "extensions": [".py", ".pyi"]
    }
  },
  "plugin": ["@tarquinen/opencode-dcp@latest"],
  "experimental": {
    "primary_tools": ["prune"]
  }
}
