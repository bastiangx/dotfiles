{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-sonnet-4.5",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-12686183-6981-43f9-9c17-d16cbbf9bb05"
      }
    }
  },
  "lsp": {
    "pyright": {
      "disabled": true
    },
    "ty": {
      "command": ["ty", "server"],
      "extensions": [".py", ".pyi"]
    },
    "ruff": {
      "command": ["ruff", "server"],
      "extensions": [".py", ".pyi"]
    }
  },
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "@nick-vi/opencode-type-inject",
    "oh-my-opencode",
    "opencode-pty",
    "@bastiangx/opencode-unmoji"
  ],
  "experimental": {
    "primary_tools": ["prune"]
  }
}
