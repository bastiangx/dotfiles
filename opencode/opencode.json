{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-sonnet-4.5",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-12686183-6981-43f9-9c17-d16cbbf9bb05"
      }
    }
  },
  "permission": {
    "external_directory": "deny",
    "bash": {
      "*": "allow",
      "git clone *": "deny"
    }
  },
  "lsp": {
    "pyright": {
      "disabled": true
    },
    "ty": {
      "command": ["ty", "server"],
      "extensions": [".py", ".pyi"]
    },
    "ruff": {
      "command": ["ruff", "server"],
      "extensions": [".py", ".pyi"]
    },
    "rust-analyzer": {
      "command": ["rust-analyzer"],
      "extensions": [".rs"]
    },
    "taplo": {
      "command": ["taplo", "lsp", "stdio"],
      "extensions": [".toml"]
    }
  },
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "@nick-vi/opencode-type-inject@latest",
    "oh-my-opencode@latest",
    "opencode-pty@latest",
    "@bastiangx/opencode-unmoji@latest"
  ],
  "experimental": {
    "primary_tools": ["prune"]
  }
}
